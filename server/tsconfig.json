{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "ES2018",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
		},
		"allowJs": true
    },
    "include": [
        "src/**/*"
	],
	"exclude": [
		"src/**/*.gamebundle/client/*"
	]
}